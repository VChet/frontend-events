{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "checkJs": true,
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "WebWorker"],
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
